# Server
PORT=3000
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=admissions_agent

# JWT
JWT_SECRET=your_jwt_secret_key_change_this
JWT_EXPIRES_IN=24h

# Session
SESSION_SECRET=your_session_secret_change_this

# Upload
UPLOAD_DIR=./public/uploads
MAX_FILE_SIZE=5242880

# Atlas SkillTech API
ATLAS_API_BASE_URL=https://www.atlasskilltech.app/admissions/api
ATLAS_API_TOKEN=your_atlas_api_bearer_token

# AI Document Verification
# Provider: 'claude' or 'openai'
AI_PROVIDER=claude

# Claude (Anthropic) - used when AI_PROVIDER=claude
ANTHROPIC_API_KEY=your_anthropic_api_key
CLAUDE_MODEL=claude-sonnet-4-20250514

# OpenAI - used when AI_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o
